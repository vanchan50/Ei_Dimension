<UserControl x:Class="Ei_Dimension.Views.NumpadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type=ViewModels:NumpadViewModel}"
             d:DesignHeight="390" d:DesignWidth="360">
  <Grid>
    <Border Background="Black" Opacity="0.3"
            Width="360" Height="390"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="9"/>
    <Button Content="❌"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="100"
              Height="50"
              Width="50"
              FontSize="40" FontWeight="ExtraBold"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="310,0,0,0"/>
    <StackPanel
                  Margin="50,0,0,0">
      <StackPanel Orientation="Horizontal"
                  Margin="0,70,0,10">
        <Button Content="1"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="1"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="2"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="2"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="3"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="3"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal"
                  Margin="0,0,0,10">
        <Button Content="4"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="4"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="5"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="5"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="6"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="6"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal"
                Margin="0,0,0,10">
        <Button Content="7"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="7"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="8"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="8"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="9"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="9"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>

      </StackPanel>

      <StackPanel Orientation="Horizontal"
                  Margin="0,0,0,0">
        <Button Content="."
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="11"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="0"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="0"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
        <Button Content="&lt;"
              Command="{Binding NumpadInputClickCommand}"
              Style="{StaticResource ButtonStyle}"
              CommandParameter="10"
              Height="60"
              Width="60"
              FontSize="40"
              Margin="0,0,10,0"/>
      </StackPanel>
    </StackPanel>
    <Button Content="&#9166;"
            Command="{Binding EnterInputClickCommand}"
            Style="{StaticResource ButtonStyle}"
            Background="Green"
            Height="150"
            Width="80"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="50"
            Margin="260,190,0,0"/>
  </Grid>
</UserControl>
