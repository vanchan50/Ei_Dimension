<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:ei_dimension="clr-namespace:Ei_Dimension"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             x:Class="Ei_Dimension.Views.ResultsView"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type={x:Type ViewModels:ResultsViewModel}}"
             d:DesignHeight="674" d:DesignWidth="1500">
  <dxmvvm:Interaction.Behaviors>
    <dxmvvm:DispatcherService/>
  </dxmvvm:Interaction.Behaviors>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <!--Scatter Chart-->
    <dxc:ChartControl Grid.Row="1" Grid.Column="0">
      <dxc:ChartControl.Legends>
        <dxc:Legend HorizontalPosition="Center"
                    MarkerMode="CheckBox"
                    Orientation="Horizontal"
                    VerticalPosition="BottomOutside"
                    Width="280" Visible="True"/>
      </dxc:ChartControl.Legends>
      <dxc:XYDiagram2D>
        <dxc:XYDiagram2D.AxisY>
          <dxc:AxisY2D>
            <dxc:AxisY2D.Title>
              <dxc:AxisTitle Content="Count" Visible="True"/>
            </dxc:AxisY2D.Title>
          </dxc:AxisY2D>
        </dxc:XYDiagram2D.AxisY>
        <dxc:XYDiagram2D.AxisX>
          <dxc:AxisX2D Logarithmic="True">
            <dxc:AxisX2D.Title>
              <dxc:AxisTitle Content="Scatter"  Visible="True"/>
            </dxc:AxisX2D.Title>
          </dxc:AxisX2D>
        </dxc:XYDiagram2D.AxisX>
        <dxc:LineSeries2D DataSource="{Binding RedSsc}"
                                       ValueDataMember="Value"
                                       ArgumentDataMember="Argument"
                                       DisplayName="Red"
                                       Brush="Red"/>
        <dxc:LineSeries2D DataSource="{Binding GreenSsc}"
                                       ValueDataMember="Value"
                                       ArgumentDataMember="Argument"
                                       DisplayName="Green"
                                       Brush="Green"/>
        <dxc:LineSeries2D DataSource="{Binding VioletSsc}"
                                       ValueDataMember="Value"
                                       ArgumentDataMember="Argument"
                                       DisplayName="Violet"
                                       Brush="DarkViolet"
                                       CheckedInLegend="False"/>
        <dxc:LineSeries2D DataSource="{Binding ForwardSsc}"
                                       ValueDataMember="Value"
                                       ArgumentDataMember="Argument"
                                       DisplayName="Forward"
                                       Brush="Black"
                                       CheckedInLegend="False"/>
      </dxc:XYDiagram2D>
    </dxc:ChartControl>

    <!--Reporter Chart-->
    <dxc:ChartControl Grid.Row="1" Grid.Column="1">
      <dxc:XYDiagram2D>
        <dxc:XYDiagram2D.AxisY>
          <dxc:AxisY2D>
            <dxc:AxisY2D.Title>
              <dxc:AxisTitle Content="Count" Visible="True"/>
            </dxc:AxisY2D.Title>
          </dxc:AxisY2D>
        </dxc:XYDiagram2D.AxisY>
        <dxc:XYDiagram2D.AxisX>
          <dxc:AxisX2D Logarithmic="True">
            <dxc:AxisX2D.Title>
              <dxc:AxisTitle Content="Reporter"  Visible="True"/>
            </dxc:AxisX2D.Title>
          </dxc:AxisX2D>
        </dxc:XYDiagram2D.AxisX>
        <dxc:LineSeries2D DataSource="{Binding Reporter}"
                                       ValueDataMember="Value"
                                       ArgumentDataMember="Argument"
                                       Brush="Black"/>
      </dxc:XYDiagram2D>
    </dxc:ChartControl>

    <!--Heatmap Chart-->
    <dxc:ChartControl Grid.Row="1" Grid.Column="2">
      <dxc:XYDiagram2D Height="297" Width="446">
        <dxc:XYDiagram2D.AxisY>
          <dxc:AxisY2D Logarithmic="True" GridLinesMinorVisible="True" MinorCount="9" Interlaced="False">
            <dxc:AxisY2D.WholeRange>
              <dxc:Range dxc:AxisY2D.AlwaysShowZeroLevel="False" >
                <dxc:Range.MaxValue>
                  <System:Double>10000</System:Double>
                </dxc:Range.MaxValue>
                <dxc:Range.MinValue>
                  <System:Double>1</System:Double>
                </dxc:Range.MinValue>
              </dxc:Range>
            </dxc:AxisY2D.WholeRange>
            <dxc:AxisY2D.Title>
              <dxc:AxisTitle Content="{Binding HeatmapAxisYTitle}" Visible="False"/>
            </dxc:AxisY2D.Title>
            <dxc:AxisY2D.VisualRange>
              <dxc:Range dxc:AxisY2D.AlwaysShowZeroLevel="False">
                <dxc:Range.MaxValue>
                  <System:Double>10000</System:Double>
                </dxc:Range.MaxValue>
                <dxc:Range.MinValue>
                  <System:Double>1</System:Double>
                </dxc:Range.MinValue>
              </dxc:Range>
            </dxc:AxisY2D.VisualRange>
          </dxc:AxisY2D>
        </dxc:XYDiagram2D.AxisY>
        <dxc:XYDiagram2D.AxisX>
          <dxc:AxisX2D Logarithmic="True" GridLinesMinorVisible="True" MinorCount="9" GridLinesVisible="True" Interlaced="False">
            <dxc:AxisX2D.VisualRange>
              <dxc:Range >
                <dxc:Range.MaxValue>
                  <System:Double>10000</System:Double>
                </dxc:Range.MaxValue>
                <dxc:Range.MinValue>
                  <System:Double>1</System:Double>
                </dxc:Range.MinValue>
              </dxc:Range>
            </dxc:AxisX2D.VisualRange>
            <dxc:AxisX2D.WholeRange>
              <dxc:Range >
                <dxc:Range.MaxValue>
                  <System:Double>10000</System:Double>
                </dxc:Range.MaxValue>
                <dxc:Range.MinValue>
                  <System:Double>1</System:Double>
                </dxc:Range.MinValue>
              </dxc:Range>
            </dxc:AxisX2D.WholeRange>
            <dxc:AxisX2D.Title>
              <dxc:AxisTitle Content="{Binding HeatmapAxisXTitle}"  Visible="False"/>
            </dxc:AxisX2D.Title>
          </dxc:AxisX2D>
        </dxc:XYDiagram2D.AxisX>
        <dxc:PointSeries2D DataSource="{Binding HeatLevel1}"
                           ArgumentDataMember="X"
                           ValueDataMember="Y"
                           MarkerSize="3"
                           Brush="Aqua"/>
        <dxc:PointSeries2D DataSource="{Binding HeatLevel2}"
                           ArgumentDataMember="X"
                           ValueDataMember="Y"
                           MarkerSize="3"
                           Brush="Green"/>
        <dxc:PointSeries2D DataSource="{Binding HeatLevel3}"
                           ArgumentDataMember="X"
                           ValueDataMember="Y"
                           MarkerSize="3"
                           Brush="Orange"/>
        <dxc:PointSeries2D DataSource="{Binding HeatLevel4}"
                           ArgumentDataMember="X"
                           ValueDataMember="Y"
                           MarkerSize="3"
                           Brush="OrangeRed"/>
        <dxc:PointSeries2D DataSource="{Binding HeatLevel5}"
                           ArgumentDataMember="X"
                           ValueDataMember="Y"
                           MarkerSize="3"
                           Brush="#FFEB2323"/>
      </dxc:XYDiagram2D>
    </dxc:ChartControl>

    <!--Data Selector Y-->
    <StackPanel Grid.Row="1" Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="3,0,0,0">
      <RadioButton Content="CL3"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   Command="{Binding ChangeHeatmapYCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>3</System:Int32>
        </RadioButton.CommandParameter>
        <RadioButton.LayoutTransform>
          <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
        </RadioButton.LayoutTransform>
      </RadioButton>
      <RadioButton Content="CL2"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   IsChecked="True"
                   Command="{Binding ChangeHeatmapYCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>2</System:Int32>
        </RadioButton.CommandParameter>
        <RadioButton.LayoutTransform>
          <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
        </RadioButton.LayoutTransform>
      </RadioButton>
      <RadioButton Content="CL1"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   Command="{Binding ChangeHeatmapYCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>1</System:Int32>
        </RadioButton.CommandParameter>
        <RadioButton.LayoutTransform>
          <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
        </RadioButton.LayoutTransform>
      </RadioButton>
      <RadioButton Content="CL0"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   Command="{Binding ChangeHeatmapYCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>0</System:Int32>
        </RadioButton.CommandParameter>
        <RadioButton.LayoutTransform>
          <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
        </RadioButton.LayoutTransform>
      </RadioButton>
    </StackPanel>
    
    <!--Data Selector X-->
    <StackPanel Grid.Row="1" Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="150,0,0,00">
      <RadioButton Content="CL0"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   Command="{Binding ChangeHeatmapXCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>0</System:Int32>
        </RadioButton.CommandParameter>
      </RadioButton>
      <RadioButton Content="CL1"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   IsChecked="True"
                   Command="{Binding ChangeHeatmapXCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>1</System:Int32>
        </RadioButton.CommandParameter>
      </RadioButton>
      <RadioButton Content="CL2"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   Command="{Binding ChangeHeatmapXCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>2</System:Int32>
        </RadioButton.CommandParameter>
      </RadioButton>
      <RadioButton Content="CL3"
                   Style="{StaticResource HeatmapSelectorStyle}"
                   Command="{Binding ChangeHeatmapXCommand}">
        <RadioButton.CommandParameter>
          <System:Int32>3</System:Int32>
        </RadioButton.CommandParameter>
      </RadioButton>
    </StackPanel>
    
    <!--could be spreadsheet-->
    <dxg:GridControl x:Name="gridControl" Grid.ColumnSpan="3" Grid.Row="0"
                     HorizontalAlignment="Stretch"
                     ItemsSource="{Binding AvailableResults}"
                     SelectionMode="None"
                     SelectedItems="{Binding SelectedItem}">
      <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand EventName="SelectedItemChanged"
                               Command="{Binding FillAllDataAsyncCommand}"/>
      </dxmvvm:Interaction.Behaviors>
      <dxg:GridControl.View>
        <dxg:CardView ShowTotalSummary="True"
                       AllowMoveColumnToDropArea="False"
                       ShowGroupPanel="False"
                       AllowEditing="False"
                       AllowSorting="False"
                       AllowColumnFiltering="False"
                       AllowPaging="False"
                       AllowGrouping="False"
                       ShowSearchPanelMode="Never"
                       IsGroupPanelMenuEnabled="False"
                       CardLayout="Columns"
                       ShowCardExpandButton="False"/>
      </dxg:GridControl.View>
      <dxg:GridColumn FieldName="Name" IsSmart="True"/>
      <dxg:GridColumn FieldName="Created" IsSmart="True"/>
    </dxg:GridControl>

  </Grid>
</UserControl>
