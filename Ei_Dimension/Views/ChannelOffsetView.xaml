                 FontSize="36"
                 FontWeight="UltraBold"
                 Foreground="{StaticResource AppTextColor}"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,10,4,0"/>
            <TextBlock Text="{lang:Loc Channels_Forward_Scatter}"
                 FontFamily="{StaticResource AppTextFont}"
                 FontSize="36"
                 FontWeight="UltraBold"
                 Foreground="{StaticResource AppTextColor}"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,11,4,0"/>
        </StackPanel>
        <!--Avg BG-->
        <StackPanel Name="AvgBgSP" Width="0">
          <TextBlock Text="Average BG"
                     FontFamily="{StaticResource AppTextFont}"
                     FontSize="36"
                     Width="180"
                     TextAlignment="Center"
                     FontWeight="UltraBold"
                     Foreground="{StaticResource AppTextColor}"
                     HorizontalAlignment="Left"/>
        <Border Background="{StaticResource RibbonBackgroundActive}">
          <StackPanel VerticalAlignment="Stretch" Name="SPAvgBG"
                    Width="180">
            <TextBox HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Margin="10,10,10,0"
                     Style="{StaticResource InputFieldStyle}"
                     Text="{Binding AverageBg[0]}"/>
            <TextBox HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Margin="10,15,10,0"
                     Style="{StaticResource InputFieldStyle}"
                     Text="{Binding AverageBg[1]}"/>
            <TextBox HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Margin="10,15,10,0"
                     Style="{StaticResource InputFieldStyle}"
                     Text="{Binding AverageBg[2]}"/>
            <TextBox HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Margin="10,35,10,0"
                     Style="{StaticResource InputFieldStyle}"
                     Text="{Binding AverageBg[3]}"/>
            <TextBox HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Margin="10,15,10,0"
                     Style="{StaticResource InputFieldStyle}"
                     Text="{Binding AverageBg[4]}"/>
            <TextBox HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Margin="10,15,10,0"
                     Style="{StaticResource InputFieldStyle}"
                     Text="{Binding AverageBg[5]}"/>
            <TextBox HorizontalAlignment="Stretch"
