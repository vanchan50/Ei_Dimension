<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:Ei_Dimension.Views"
    xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" 
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
    xmlns:lang="clr-namespace:Ei_Dimension.Language;assembly=Language"
    xmlns:img="clr-namespace:Ei_Dimension.Styles"
    x:Class="Ei_Dimension.MainWindow"
    Title="Ei_Dimension"
    Height="800"
    Width="1500"
    SnapsToDevicePixels="True"
    ResizeMode="NoResize"
    SizeToContent="Manual"
    Padding="0"
    WindowStyle="None"
    Background="{StaticResource AppBackground}"
    WindowStartupLocation="CenterScreen"
    ShowBackButton="False"
    ShowTitle="False"
    ShowStatusPanel="False"
    WindowKind="Normal"
    UseGlowColors="False"
    DataContext="{dxmvvm:ViewModelSource Type=ViewModels:MainViewModel}">
  <!--make window topmost, maximized-->
  <dxmvvm:Interaction.Triggers>
    <dxmvvm:EventToCommand EventName="Initialized" Command="{Binding NavigateResultsCommand}"/>
    <dxmvvm:EventToCommand EventName="Initialized" Command="{Binding NavigateDataAnalysisCommand}"/>
    <dxmvvm:EventToCommand EventName="Initialized" Command="{Binding NavigateMaintenanceCommand}"/>
    <dxmvvm:EventToCommand EventName="Initialized" Command="{Binding NavigateSettingsCommand}"/>
  </dxmvvm:Interaction.Triggers>
  <Grid>
    <!-- Company Logo -->
    <Image HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="1300,768,0,0"
           Source="Emission_Logo.png"
           RenderOptions.BitmapScalingMode="HighQuality"/>
    <!--Tile Ribbon-->
    <StackPanel Orientation="Horizontal"
                Height="80" HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="210,30,0,0">
      <RadioButton Content="{lang:Loc Ribbon_Acquire}" Width="180"
                    img:EmbeddedImg.Image="/Icons/acquire sample icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateExperimentCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Results}" Width="180"
                    img:EmbeddedImg.Image="/Icons/results icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateResultsCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Analysis}" Width="180"
                    img:EmbeddedImg.Image="/Icons/data analysis icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateDataAnalysisCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Maintenance}" Width="180"
                    img:EmbeddedImg.Image="/Icons/maintenance icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateMaintenanceCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Service}" Width="180"
                    img:EmbeddedImg.Image="/Icons/service icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateSettingsCommand}">
      </RadioButton>
    </StackPanel>

    <dxwui:NavigationFrame HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="0,115,0,0"
                           AnimationType="Fade"
                           NavigationCacheMode="Required">
      <dxmvvm:Interaction.Triggers>
        <dxmvvm:EventToCommand EventName="Loaded" Command="{Binding NavigateExperimentCommand}" />
      </dxmvvm:Interaction.Triggers>
      <dxmvvm:Interaction.Behaviors>
        <dxwuin:FrameNavigationService/>
      </dxmvvm:Interaction.Behaviors>
    </dxwui:NavigationFrame>

    <!--Numpad-->
    <dx:SimpleButton Height="40" Width="50"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="1320,60,0,0"
                     Glyph="{dx:DXImage 'SvgImages/Icon Builder/Electronics_Keyboard.svg'}"
                     GlyphHeight="40"
                     GlyphWidth="40"
                     Command="{Binding NumpadToggleButonCommand}"/>

    <Grid Width="202" Height="280"
          VerticalAlignment="Top" HorizontalAlignment="Left"
          Margin="1250,120,0,0"
          Visibility="{Binding NumpadVisible}">
      <Views:NumpadView />
    </Grid>
    
  </Grid>
</dx:ThemedWindow>
